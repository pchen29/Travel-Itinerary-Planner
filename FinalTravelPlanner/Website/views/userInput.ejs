                                <option value="Leicester UK">
                                <option value="Lichfield UK">
                                <option value="Lincoln UK">
                                <option value="Lisburn UK">
                                <option value="Liverpool UK">
                                <option value="City of London UK">
                                <option value="Manchester UK">
                                <option value="Newcastle Upon Tyne UK">
                                <option value="Newport UK">
                                <option value="Newry UK">
                                <option value="Norwich UK">
                                <option value="Nottingham UK">
                                <option value="Oxford UK">
                                <option value="Perth UK">
                                <option value="Peterborough UK">
                                <option value="Plymouth UK">
                                <option value="Portsmouth UK">
                                <option value="Preston UK">
                                <option value="Ripon, North Yorkshire UK">
                                <option value="St Albans UK">
                                <option value="St David's UK">
                                <option value="Salford UK">
                                <option value="Salisbury UK">
                                <option value="Sheffield UK">
                                <option value="Southampton UK">
