                                <option value="City of Westminster UK">
                                <option value="Winchester UK">
                                <option value="Wolverhampton UK">
                                <option value="Worcester UK">
                                <option value="York UK">
                            </datalist>
                        </div>
                        <div class="form-group">
                             <label> Departure Airport</label>
                             <input type="text" name="departure_airport" id="departure_airport required="true" class="form-control" list="airport">
