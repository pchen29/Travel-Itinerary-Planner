<body>

<main class="bg">
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid" style="border: 2px solid white; padding: 20px 100px; border-radius: 10px;">
            <div class="navbar-header" style="width: 100%;">
                <div class="row">
                    <div class="col-lg-8 col-md-11 col-sm-11">
                        <a style="font-size: xx-large; color: white; text-decoration:none;">Travel Planner</a>
                    </div>
                    <div class="col-lg-4 col-md-1 col-sm-1" style=" display: flex; justify-content: flex-end; align-items: flex-end;">
                        <a style="font-size: small; color: white; text-decoration:none;">Designed by XXX</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row justify-content-center h-100 align-items-end">
            <div class="col-sm-11 col-md-5 p-4">
                <div class="card p-4">
                    <h3 class="text-center mb-3">Input your details</h3>
                    <form id="inputForm"  action='/input' method='POST'>

                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="email" id="email" required="true" class="form-control" value="<%= email %>" readonly="readonly">
                        </div>
                        <div class="form-group">
                            <label>Departure City</label>
                            <input type="text" name="departure" id="departure" required="true" class="form-control" list="cities">
                            <datalist id="cities">
